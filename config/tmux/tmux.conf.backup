# make sure to clone the TPM repo before setting things up.

# List of plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'sainnhe/tmux-fzf'
set -g @plugin 'tmux-plugins/tmux-logging'
set -g @plugin 'tmux-plugins/tmux-resurrect'

# set a better limit
set -g history-limit 50000
# remap prefix from 'C-b' to 'C-a'
unbind C-b
set-option -g prefix C-a
bind-key C-a send-prefix
set-option -g default-command $SHELL

# Mouse!??
set-option -g mouse on

# Custom remaps:
bind-key K kill-session
# Reload source file:
bind R source-file ~/.tmux.conf \; display-message " Config Reloaded!"

# switch panes using Alt-arrow without prefix
bind -n M-h  select-pane -L
bind -n M-l select-pane -R
bind -n M-k    select-pane -U
bind -n M-j  select-pane -D

# Switch sessions effortlessly:
bind-key -n 'M-]' switch-client -n
bind-key -n 'M-[' switch-client -p

# General
setw -g mode-keys vi
set-option -g allow-rename off
set -g base-index 1
set -g pane-active-border-style fg="blue"

# Status bar customization
set-option -g status-left '[#{session_name}]  '
set -g status-right " #[fg="#c299ff"]#H#[default] %d-%b-%y #[fg="#dd99ff"] #(~/toolkit/scripts/HTB)"
set-option -g window-status-format '#{window_index} #{window_name}'
set-option -ag message-style fg=white,blink; set-option -ag message-style bg=black

