bindsym $mod+m exec --no-startup-id $HOME/configuration.nix/config/utils/monitor.sh 
bindsym $mod+Shift+m exec --no-startup-id $HOME/configuration.nix/config/utils/laptop.sh 
bindsym $mod+Shift+s exec --no-startup-id $HOME/configuration.nix/config/utils/setup.sh

# i3-utils
exec_always --no-startup-id i3-autodisplay 
exec_always --no-startup-id i3-auto-layout

