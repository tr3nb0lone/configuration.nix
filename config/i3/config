# i3-gaps
for_window [class="^.*"] border pixel 1
gaps inner 2
gaps outer 4

default_border normal

# class                 border  backgr. text    indicator child_border
client.focused          #8B008B #8B008B #8B008B #8B008B   #8B008B
client.focused_inactive #8B008B #8B008B #8B008B #8B008B   #8B008B
client.unfocused        #8B008B #8B008B #8B008B #8B008B   #8B008B
client.urgent           #8B008B #8B008B #8B008B #8B008B   #8B008B
client.placeholder      #8B008B #8B008B #8B008B #8B008B   #8B008B
client.background       #ffffff

# feh - Image utils 
exec_always --no-startup-id sh $HOME/dotfiles.nix/config/feh/fehbg


# picom:
exec_always --no-startup-id picom -b --config $HOME/dotfiles.nix/config/picom/picom.conf

exec_always --no-startup-id $HOME/dotfiles.nix/config/polybar/launch.sh

# Resize Bindings
bindsym $mod+Ctrl+Shift+Right resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+Shift+Up resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+Shift+Down resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+Shift+Left resize grow width 10 px or 10 ppt

# screenshot
bindsym $mod+P exec flameshot gui

# Utils
bindsym $mod+m exec --no-startup-id $HOME/dotfiles.nix/config/utils/monitor.sh 
bindsym $mod+Shift+m exec --no-startup-id $HOME/dotfiles.nix/config/utils/laptop.sh 

# Clipboard x Password:
exec_always xfce4-clipman --no-startup-id &
exec_always keepassxc --no-startup-id
